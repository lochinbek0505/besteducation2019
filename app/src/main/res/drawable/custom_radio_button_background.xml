<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:anroid="http://schemas.android.com/tools">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_background_color" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item anroid:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#EAE8E8" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
